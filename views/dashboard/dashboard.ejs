    <%}
  }%>
  <div class="container">
    

    <form action="dashboard" method="post">
      
      <textarea name="content" id="content" placeholder="Write here"><%= content %></textarea>

      <button class="btn btn-success btn-lg pull-right" type="submit" id="submit">Save</button>

      <p>
        0 words
